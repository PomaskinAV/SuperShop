@using EmptyBlazorApp;
@inject NavigationManager manager

<MudItem xs="3" lg="3" Class="d-flex">
    <MudPaper Width="300px" Class="pa-4 mb-4" Style="background-color:#6ec04a">
        <MudCard Style="height: 520px; position:relative">
            <MudCardContent Style="min-height:100px">
                <MudText Class="textwhite" Typo="Typo.subtitle1">
                    Название товара:
                    @Product.Name
                </MudText>
                <MudText Class="textsilver" Typo="Typo.subtitle1">
                    Цена:
                    @Product.Price
                </MudText>
                <MudText Class="textwhite" Typo="Typo.subtitle1">
                    Дата производства:
                    @Product.ProducedAt
                </MudText>
                <MudText Class="textwhite" Typo="Typo.subtitle1">
                    Срок годности:<br />
                    @Product.ExpiredAt
                </MudText>
                <MudText Class="textwhite" Typo="Typo.subtitle1">
                    Описание:
                    @Product.Description
                </MudText>
            </MudCardContent>
            <MudButton Style="position:absolute; bottom:10px; background-color:#6ec04a; margin-left: 10px; color: white">
                В корзину
            </MudButton>
        </MudCard>
    </MudPaper>
</MudItem>

@code {
    [Parameter]
    public Product? Product { get; set; }

    public void ToProductInfoPage()
    {
        manager.NavigateTo($"/products/{Product!.Id}");
    }
}